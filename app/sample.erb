
<%
require 'net/http'
require 'uri'
require 'json'

url = URI.parse('http://localhost:8000/api/genres')
req = Net::HTTP::Get.new(url.path)
res = Net::HTTP.start(url.host, url.port) {|http|
  http.request(req)
}
data = JSON.parse(res.body)
%>

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8">
    <title>RIQ+RECIPE</title>
  </head>
  <body>
    <h1>ジャンル一覧</h1>
    <table>
      <tbody>
        <tr>
          <th>ジャンル名</th>
          <th>カテゴリ名</th>
        </tr>
        <% data.each do |d| %>
        <tr>
          <td><%= d['name'] %></td>
          <td><%= d['category'] %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <a href="/">トップページ</a>
  </body>
</html>